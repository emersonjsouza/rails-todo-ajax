<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Task List</h2>	
	
			<div class="row">
				<div class="col-md-12 text-right">
					<%= link_to new_task_path, remote: true, id:"new_link" do %>
						<button class="btn btn-primary">
							Add New
						</button>	
					<% end %>
				</div>	
			</div>
		</div>
	</div>	
	<div class="row">
		<div id="task_list">
			<%= render @tasks %>
		</div>		
	</div>
</div>
